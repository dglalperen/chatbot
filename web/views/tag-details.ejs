<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/styles.css">
    <link rel="stylesheet" href="../styles/fontawesome/css/all.css">
    <link rel="shortcut icon" href="">
    <title>Datenbank-Management</title>
</head>

<body>
    <main>
        <div class="content">
            <a href="/tags">
                <i class="fa-solid fa-angle-left"></i>
            </a>
            <div class="patterns">
                <div class="headline">
                    <button id="add-new-pattern"><i title="Add FAQ" class="fa-solid fa-plus"></i></button>
                    <div id="myModal" class="modal">
                        <div class="modal-content">
                            <span class="close">&times;</span>
                            <h4 id="modal-create-headline"></h4>
                            <form action="create-new-PR" method="post">
                                <input type="textfield" name="newData" id="new-Data" placeholder="" />
                                <input type="textfield" name="pr" id="pr-name" />
                                <br>
                                <input type="submit" value="Create" />
                            </form>
                        </div>
                    </div>
                    <h3>Patterns</h3>
                    <button id="edit-response" class="edit-button">Edit</button>
                </div>

                <ul id="patterns-list">

                </ul>
            </div>
            <div class="responses">
                <div class="headline" id="responses-box">
                    <button id="add-new-response"><i title="Add FAQ" class="fa-solid fa-plus"></i></button>
                    <h3>Responses</h3>
                    <button id="edit-response" class="edit-button">Edit</button>
                </div>
                <ul id="responses-list">

                </ul>
            </div>
            <form action="save-changings" method="post">
                <input type="text" id="saved-changes_patterns" value="" name="changes_patterns" />
                <input type="text" id="saved-changes_responses" value="" name="changes_responses" />
                <input type="submit" id="submit-edit" value="Speichern" />
            </form>

        </div>
    </main>
</body>
<script>
    let patterns = <%- JSON.stringify(patterns) %>
    let responses = <%- JSON.stringify(responses) %>
    let id = <%- JSON.stringify(id) %>
</script>
<script src="../scripts/details.js"></script>

</html>